<Window x:Name="Game" x:Class="handman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:handman"
        mc:Ignorable="d"
        Title="Hangman" Height="450" Width="800" WindowStyle="ToolWindow">
	<Window.Background>
		<ImageBrush ImageSource="background.jpg"/>
	</Window.Background>
	<Grid>
		<StackPanel x:Name="menu" HorizontalAlignment="Left" Height="165" Margin="506,173,0,0" VerticalAlignment="Top" Width="200">
			<Button x:Name="start"  Height="75" Margin="5" Click="startGame">
				<Button.Background>
					<ImageBrush ImageSource="graphics/START.png"/>
				</Button.Background>
			</Button>
			<Button x:Name="exit"  Height="75" Margin="5,0,5,5" Click="shutdown">
				<Button.Background>
					<ImageBrush ImageSource="graphics/EXIT.png"/>
				</Button.Background>
			</Button>
		</StackPanel>

	</Grid>
</Window>
